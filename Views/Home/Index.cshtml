
@{    Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <title>WK-Finals</title>
    <link rel="stylesheet"
          href="./styles/default.css"></link>
    <link rel="stylesheet"
          href="./bootstrap/css/bootstrap.css"></link>

    <script src="./scripts/jquery-1.11.1.js" type="text/javascript"></script>
    <script src="./bootstrap/js/bootstrap.js" type="text/javascript"></script>
    <script src="./scripts/mainjq.js" type="text/javascript"></script>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div id="header" class="jumbotron">
                    <div class="visible-xs">
                        <h1>
                            WK 2014 Finals
                            <br /><small>Mobile</small>
                        </h1>
                    </div> <div class="hidden-xs">
                        <h1>
                            WK 2014 Finals
                            <small>Desktop</small>
                        </h1>
                    </div>

                    <button class="btn btn-primary">About this app</button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div id="list">
                    <h1>Games list</h1>
                    <table id="ullist" class="table table-condensed table-striped table-hover">
                        <tr><td>-- the list is currently empty --</td></tr>
                    </table>
                    <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add a new game</button>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12">
                <div id="footer">
                    <h6>All Rights Reserved (c) Info Support B.V.</h6>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1>Add a new game</h1>
                </div>
                <div class="modal-body">
                    <div id="form">
                        <form class="form-horizontal" role="form">
                            <div id="gameinputdiv" class="form-group has-feedback">
                                <label for="game" class="col-sm-2
                                 control-label">Game</label> <div class="col-sm-10">
                                    <input type="text" class="form-control"
                                           id="game" name="game" /> <span id="gamespan"
                                                                          class='hidden glyphicon glyphicon-remove
                                     form-control-feedback'></span>
                                </div>
                            </div> <div class="form-group">
                                <label for="description" class="col-sm-2
                                 control-label">Description</label> <div class="col-sm-10">
                                    <textarea class="form-control" id="description"
                                              name="description"></textarea>
                                </div>
                            </div> <div class="form-group">
                                <label for="date" class="col-sm-2
                                 control-label">Date</label> <div class="col-sm-10">
                                    <input type="text" class="form-control"
                                           id="date" name="date">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="btnSave" data-dismiss="modal">Save changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

</body>
</html>

